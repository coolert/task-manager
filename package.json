{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "openapi:validate": "redocly lint docs/openapi/openapi.yaml --max-problems=0",
        "openapi:lint": "spectral lint docs/openapi/openapi.yaml --fail-severity=error",
        "postman:check-json": "jq -e . docs/postman/task_manager_api.postman_collection.json >/dev/null",
        "postman:check-vars": "grep -q '{{BASE_URL}}' docs/postman/task_manager_api.postman_collection.json && grep -q '{{token}}' docs/postman/task_manager_api.postman_collection.json && grep -q 'Authorization' docs/postman/task_manager_api.postman_collection.json"
    },
    "devDependencies": {
        "@redocly/cli": "^2.10.0",
        "@stoplight/spectral-cli": "^6.15.0",
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.4"
    }
}
